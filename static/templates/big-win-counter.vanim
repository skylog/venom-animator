{
  "version": 1,
  "name": "big-win-counter",
  "duration": 5000,
  "width": 640,
  "height": 320,
  "assets": {},
  "nodes": [
    {
      "id": "root",
      "type": "container",
      "children": ["bg-rays", "frame", "tier-label", "counter-text", "multiplier-text"]
    },
    {
      "id": "bg-rays",
      "type": "graphics",
      "blendMode": "add",
      "graphics": {
        "type": "circle",
        "cx": 320,
        "cy": 160,
        "radius": 200,
        "fill": { "color": "#FFD700", "alpha": 0.15 }
      },
      "keyframes": {
        "alpha": [
          { "time": 0, "value": 0 },
          { "time": 500, "value": 0.5, "easing": "easeOutQuad" },
          { "time": 4000, "value": 0.5 },
          { "time": 5000, "value": 0, "easing": "easeInQuad" }
        ],
        "scale": [
          { "time": 0, "value": 0.5 },
          { "time": 500, "value": 1.0, "easing": "easeOutQuad" },
          { "time": 4000, "value": 1.0 },
          { "time": 5000, "value": 0.5, "easing": "easeInQuad" }
        ],
        "rotation": [
          { "time": 0, "value": 0 },
          { "time": 5000, "value": 3.14, "easing": "linear" }
        ]
      }
    },
    {
      "id": "frame",
      "type": "graphics",
      "graphics": {
        "type": "roundRect",
        "x": 70,
        "y": 40,
        "width": 500,
        "height": 240,
        "radius": 24,
        "fill": { "color": "#0a0a1a", "alpha": 0.9 },
        "stroke": { "width": 3, "color": "#FFD700", "alpha": 0.8 }
      },
      "keyframes": {
        "alpha": [
          { "time": 0, "value": 0 },
          { "time": 300, "value": 1, "easing": "easeOutCubic" },
          { "time": 4200, "value": 1 },
          { "time": 5000, "value": 0, "easing": "easeInQuad" }
        ],
        "scale": [
          { "time": 0, "value": 0.6 },
          { "time": 300, "value": 1.0, "easing": "easeOutBack" },
          { "time": 4200, "value": 1.0 },
          { "time": 5000, "value": 0.8, "easing": "easeInQuad" }
        ]
      }
    },
    {
      "id": "tier-label",
      "type": "text",
      "text": "{{tierLabel}}",
      "x": 320,
      "y": 90,
      "anchorX": 0.5,
      "anchorY": 0.5,
      "style": {
        "fontFamily": "Arial",
        "fontWeight": "bold",
        "fontSize": 36,
        "fill": "#FFD700"
      },
      "keyframes": {
        "alpha": [
          { "time": 0, "value": 0 },
          { "time": 400, "value": 1, "easing": "easeOutCubic" },
          { "time": 4200, "value": 1 },
          { "time": 5000, "value": 0, "easing": "easeInQuad" }
        ],
        "scale": [
          { "time": 0, "value": 2.0 },
          { "time": 400, "value": 1.0, "easing": "easeOutBack" }
        ]
      }
    },
    {
      "id": "counter-text",
      "type": "text",
      "text": "{{amount}}",
      "x": 320,
      "y": 170,
      "anchorX": 0.5,
      "anchorY": 0.5,
      "style": {
        "fontFamily": "Arial",
        "fontWeight": "bold",
        "fontSize": 56,
        "fill": "#FFFFFF"
      },
      "keyframes": {
        "alpha": [
          { "time": 0, "value": 0 },
          { "time": 600, "value": 0 },
          { "time": 800, "value": 1, "easing": "easeOutCubic" },
          { "time": 4200, "value": 1 },
          { "time": 5000, "value": 0, "easing": "easeInQuad" }
