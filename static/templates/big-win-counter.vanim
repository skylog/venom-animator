          { "time": 1900, "value": 1.0, "easing": "easeInOutSine" },
          { "time": 2500, "value": 1.0 },
          { "time": 2700, "value": 1.06, "easing": "easeInOutSine" },
          { "time": 2900, "value": 1.0, "easing": "easeInOutSine" }
        ]
      }
    },
    {
      "id": "multiplier-text",
      "type": "text",
      "text": "x{{multiplier}}",
      "x": 320,
      "y": 240,
      "anchorX": 0.5,
      "anchorY": 0.5,
      "style": {
        "fontFamily": "Arial",
        "fontWeight": "bold",
        "fontSize": 24,
        "fill": "#aaaaaa"
      },
      "keyframes": {
        "alpha": [
          { "time": 0, "value": 0 },
          { "time": 1000, "value": 0 },
          { "time": 1200, "value": 1, "easing": "easeOutCubic" },
          { "time": 4200, "value": 1 },
          { "time": 5000, "value": 0, "easing": "easeInQuad" }
        ]
      }
    }
  ],
  "particles": [
    {
      "id": "coins-burst",
      "startTime": 700,
      "mode": "burst",
      "x": 320,
      "y": 160,
      "config": {
        "count": 30,
        "lifetime": 1200,
        "speed": { "min": 3, "max": 9 },
        "size": { "min": 2, "max": 5 },
        "color": "#FFD700",
        "alpha": { "start": 1, "end": 0 },
        "direction": { "min": 0, "max": 6.283 },
        "gravity": 1.5,
        "blendMode": "add"
      }
    }
  ],
  "states": [
    { "id": "intro", "label": "Intro", "startTime": 0, "endTime": 800, "color": "#4a9eff" },
    { "id": "count-up", "label": "Count Up", "startTime": 800, "endTime": 3000, "color": "#ffd700" },
    { "id": "celebration", "label": "Celebrate", "startTime": 3000, "endTime": 4200, "color": "#ff9f43" },
    { "id": "dismiss", "label": "Dismiss", "startTime": 4200, "endTime": 5000, "color": "#ff6b6b" }
  ],
  "params": {
    "tierLabel": { "type": "string", "default": "BIG WIN" },
    "amount": { "type": "string", "default": "$5,000" },
    "multiplier": { "type": "string", "default": "25" }
  }
}
